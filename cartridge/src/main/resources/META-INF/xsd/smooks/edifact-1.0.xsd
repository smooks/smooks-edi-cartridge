<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            xmlns:smooks="https://www.smooks.org/xsd/smooks-1.2.xsd"
            xmlns:smooks-edifact="https://www.smooks.org/xsd/smooks/edifact-1.0.xsd"
            targetNamespace="https://www.smooks.org/xsd/smooks/edifact-1.0.xsd"
            elementFormDefault="qualified">

    <xsd:import namespace="https://www.smooks.org/xsd/smooks-1.2.xsd"/>

    <xsd:annotation>
        <xsd:documentation xml:lang="en">Smooks DFDL Reader Configuration</xsd:documentation>
    </xsd:annotation>

    <xsd:element name="parser" type="smooks-edifact:parser" substitutionGroup="smooks:abstract-reader">
        <xsd:annotation>
            <xsd:documentation xml:lang="en">
                DFDL Reader Configuration
                The DFDL reader reads a flat file and converts it to SAX events that Smooks can process.
            </xsd:documentation>
        </xsd:annotation>
    </xsd:element>

<!--    <xsd:element name="unparser" substitutionGroup="smooks:abstract-resource-config" type="smooks-dfdl:writerVisitor">-->
<!--        <xsd:annotation>-->
